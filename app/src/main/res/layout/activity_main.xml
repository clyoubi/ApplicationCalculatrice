<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/ecran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:hint="0"
        android:gravity="end"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4">

        <Button
            android:id="@+id/boutton_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="9"
            android:onClick="monClickNumero"/>

        <Button
            android:id="@+id/boutton_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="+"
            android:backgroundTint="@color/black"
            android:onClick="monCLickFonction"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="-"
            android:onClick="monCLickFonction"
            android:backgroundTint="@color/black"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="-"
            android:onClick="monCLickFonction"
            android:backgroundTint="@color/black"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="8" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ecran"
            android:layout_centerInParent="true"
            android:text="-"
            android:onClick="monCLickFonction"
            android:backgroundTint="@color/black"/>


    </GridLayout>


</LinearLayout>